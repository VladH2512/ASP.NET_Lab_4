@model ASP.NET_Lab_4.Data.Models.Order

<div class="row">
    <h3>Placing an order</h3>
    <form asp-action="Checkout" method="post" class="formhorizontal">
        <div class="form-group">
            <label asp-for = "name"></label>
            <div class="col-md-5">
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="textdanger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="surname"></label>
            <div class="col-md-5">
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="textdanger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="address"></label>
            <div class="col-md-5">
                <input asp-for="address" class="form-control" />
                <span asp-validation-for="address" class="textdanger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="phone"></label>
            <div class="col-md-5">
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="textdanger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="email"></label>
            <div class="col-md-5">
                <input asp-for="email" class="form-control" />
                <span asp-validation-for="email" class="textdanger"></span>
            </div>
        </div>

        <input class="btn btn-success" type="submit" value="Complete the order" />
    </form>
</div>

